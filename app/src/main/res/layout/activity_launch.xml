<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    >

  <im.ene.mxmo.widget.SquareToHeightImageButton
      android:id="@+id/start_game"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="16dp"
      android:adjustViewBounds="false"
      android:elevation="2dp"
      android:padding="32dp"
      android:scaleType="centerInside"
      app:srcCompat="@drawable/ic_play_arrow_black_24dp"
      />

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="16dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >

    <Button
        android:id="@+id/reset_gyro_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:text="Reset gyro data"
        />

    <Button
        android:id="@+id/reset_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:text="Reset Username"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MXMO TicTacToe\nCreated by MEMECation team\nPowered by JINS Meme"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />
  </LinearLayout>

</LinearLayout>